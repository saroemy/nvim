{
  "workbench.iconTheme": "catppuccin-frappe",
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.8,
  "editor.lineNumbers": "relative",
  "debug.console.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "workbench.editor.enablePreview": false,
  "workbench.tree.renderIndentGuides": "always", // Mostra le guide di indentazione
  "window.zoomLevel": 0.4,
  "git.autofetch": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  // "autopep8.args": ["--maxLineLength", "120"],
  // PERSONAL
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.fullScreen": false,
  // Vim key mappings
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": false,
  "vim.useCtrlKeys": true,
  "vim.ignorecase": true,
  "vim.smartcase": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-q>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<C-d>"],
      "after": ["<C-d>", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["<C-u>", "z", "z"]
    },
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["<leader>", "c"],
      "after": ["\"", "_", "c"]
    },
    {
      "before": ["<leader>", "x"],
      "commands": [":bd"]
    },
    {
      "before": ["<Tab>"],
      "commands": [":bnext"]
    },
    {
      "before": ["<S-Tab>"],
      "commands": [":bprevious"]
    },
    {
      "before": [":"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<leader>", "c", "f"],
      "commands": ["editor.action.formatDocument"],
      "silent": true
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["extension.fuzzySearch"],
      "silent": true
    },
    {
      "before": ["<C-p>"],
      "commands": ["workbench.action.focusSideBar"],
      "silent": true
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleZenMode"],
      "silent": true
    },
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"]
    },
    {
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["<leader>", "c"],
      "after": ["\"", "_", "c"]
    },
    {
      "before": ["p"],
      "after": ["\"", "_", "d", "P"]
    },
    {
      "before": ["Tab"],
      "commands": ["editor.action.smartSelect.expand"]
    },
    {
      "before": ["<S-Tab>"],
      "commands": ["editor.action.smartSelect.shrink"]
    }
  ],
  "terminal.integrated.defaultProfile.osx": "tmux-shell",
  "terminal.integrated.profiles.osx": {
    "tmux-shell": {
      "path": "tmux",
      "args": ["new-session", "-A", "-s", "vscode:${workspaceFolder}"]
    }
  },
  "vim.vimrc.enable": false
}
